<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | BloodCamp</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="registerPage">
      <div class="registerContainer">
        <div class="registerHeading">LOGIN</div>
        <form
          class="registerForm"
          method="post"
          action="/users/login"
          onsubmit="return handleSubmit(event);"
          id="loginForm"
        >
          <input
            type="text"
            placeholder="Enter your Aadhaar No."
            name="aadhaar"
          />
          <input
            type="password"
            placeholder="Enter your Password"
            name="password"
          />
          <button class="registerButton">Login</button>
          <div class="loginBox">
            <span>Don't have an account? <a href="/register">Register</a></span>
          </div>
        </form>
      </div>
    </div>

    <script>
      function handleSubmit(e) {
        e.preventDefault();
        const aadhaar = e.srcElement[0].value;
        const password = e.srcElement[1].value;
        const aadhaarRegex = /^[2-9]{1}[0-9]{11}$/;
        const isValidAadhaar = aadhaarRegex.test(aadhaar);

        if (aadhaar.trim().length === 0) {
          alert("Aadhaar No. is required");
          return false;
        } else if (password.trim().length === 0) {
          alert("Password is required");
          return false;
        } else if(!isValidAadhaar){
          alert("Invalid Aadhaar Input");
          return false;
        }
        else{
            document.getElementById("loginForm").submit();
            return true;
        }
      }
    </script>
  </body>
</html>
